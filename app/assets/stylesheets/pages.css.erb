/*Globals*/
html {height:100%;font-family:'Trebuchet MS', Arial, sans-serif;}
body {height:100%;margin:0;padding:0;font-family:'Trebuchet MS', Arial, sans-serif;}
div.content {display:inline-block;float:left;width:100%;position:relative;min-height:100%;}
div.middle_content {display:inline-block;width:100%;float:left;position:relative;height:100%;margin-top:5px;}

/*content view*/
div.content_view {display:inline-block;width:100%;float:left;padding-top:10px;height:100%;min-height:400px;}

/*Header*/
header {padding:0px;margin:0px;display:inline-block;float:left;width:100%;position:relative;height:100px;}
header h1 {padding:0px;margin:0px;display:inline-block;float:left;width:100%;text-align:center;}
nav.header {padding:0px;margin:0px;display:inline-block;width:100%;float:left;height:100px;border-bottom:1px solid #cccccc;z-index:10;}
nav.header ul {padding:0px;margin:0px;display:inline-block;width:100%;float:left;height:100px;}
nav.header ul li {padding:0px;margin:0px;display:inline-block;list-style-type:none;height:70px;color:#ffffff;line-height:20px;margin-top:15px;margin-bottom:15px;background:#7895a3;border:4px double #325d5d;}
nav.header ul li:hover {background:#325d5d;border:4px double #7895a3;}
nav.header ul li span.text_label {font-size:12px;width:100%;display:inline-block;}
nav.header ul li span.icon {display:inline-block;width:100%;padding-top:15px;}
nav.header ul li span.time_icon {display:inline-block;width:100%;padding-top:15px;font-weight:bold;}
nav.header ul li.header_left {border:0px solid #ffffff;background:#ffffff;color:#7895a3;float:left;width:13.667%;text-align:left;font-size:30px;font-family:'Trebuchet MS', Arial, sans-serif;padding-left:20px;line-height:70px;padding-top:0px;height:70px;}
nav.header ul li.header_left span.icon {display:inline;color:#7895a3;font-size:40px;}
nav.header ul li.header_left h2 {display:inline-block;width:20%;font-size:28px;margin-left:10px;color:#7895a3;}
nav.header ul li.header_right {float:right;text-align:center;font-size:30px;width:8.667%;margin-left:1%;}
nav.header ul li.header_right.selected {background:#325d5d;border:4px double #7895a3;}
nav.header ul li a {text-decoration:none;color:#ffffff;display:block;height:70px;}
/*selected headers*/
nav.header ul li.header_selected{background:#325d5d;border:4px double #7895a3;}


/*Footer*/
footer {padding:0px;height:50px;margin:0px;display:inline-block;float:left;width:100%;text-align:center;position:relative;float:bottom;}
footer div.copyright {padding:0px;margin:0px;display:inline-block;float:left;width:100%;text-align:center;}
nav.footer {height:50px;border-top:1px solid #cccccc;margin-top:18px;padding-top:12px;display:inline-block;width:100%;color:#325d5d;}
nav.footer ul {padding:0px;margin:0px;display:inline-block;float:left;width:100%;}
nav.footer ul li {padding:0px;margin:0px;display:inline-block;float:left;width:100%;list-style-type:none;}


/*Left Sidebar*/
div.left_sidebar {display:inline-block;width:100%;height:100%;float:left;position:relative;background:#ffffff;}
div.left_sidebar ul {padding:0px;margin:0px;display:inline-block;float:left;width:99%;height:100%;}
div.left_sidebar ul li {padding:0px;margin:0px;display:inline-block;float:left;width:96%;list-style-type:none;height:40px;border-bottom:1px solid #ffffff;margin-left:2%;margin-right:2%;line-height:40px;color:#ffffff;font-size:18px;border:4px double #325d5d;margin-top:6px;margin-bottom:6px;background:#7895a3;text-align:center;}
div.left_sidebar ul li a {text-decoration:none;color:#ffffff;}
div.left_sidebar ul li.option {cursor:pointer;}
div.left_sidebar ul li.option:hover {background:#325d5d;border:4px double #7895a3;}	
div.left_sidebar ul li span.text {float:left;padding-left:18px;}
div.left_sidebar ul li span.icon {float:right;padding-right:18px;}
div.left_sidebar ul li.header {text-align:center;color:#7895a3;font-weight:bold;border-bottom:3px double #7895a3;width:100%;margin-left:0;margin-right:0;position:relative;top:0;left:0;margin-left:0;margin-right:0;font-size:20px;border:4px double #7895a3;background:#ffffff;}

/*Left sidebare appointmnent*/
div.left_sidebar ul li.left_side_schedule {height:100%;display:inline-block;height:360px;}
div.left_sidebar ul li.left_side_schedule ul {display:inline-block;width:100%;padding:0px;margin:0px;height:360px;border:0px solid #789d53;}
div.left_sidebar ul li.left_side_schedule ul li {display:inline-block;width:100%;padding:0px;margin:0px;height:100%;list-style-type:none;border:0px solid #7895a3;height:360px;}

/*Content View*/
div.content_view {display:inline-block;width:100%;height:100%;float:left;position:relative;}

/*Sign in*/
div.sign_in {padding:0px;margin:auto;width:100%;height:80px;background:#7895a3;}
div.sign_in_bottom {padding:0px;margin:auto;width:100%;height:5px;background:#7895a3;clear:both;}
div.float_right{float:right;}
.button_margin{margin-right:4%}
.logo_margin{margin-left:10%}
.label_font{color:#ffffff;font-size:13px;}
.button_font{color:#ffffff;}
.logo_font {font-size:45px;color:white;text-decoration:none;font-family: 'Lucida Console',
			'DejaVu Sans Mono',monospace;font-weight:bold}
.form_border{border-style:solid;border-color:black;border-width:1px}
.styled_button{background-color:#325d64;color:white;border:none;cursor:pointer}
/*header picture*/
.signin_pic{margin-top:0;width:70%;height:500px;background:white;float:left;}

/*New Case*/
div.entries{padding:0px;margin:0px;position:relative;left:45px;width:97%;border:2px solid #7895a3;background:white;}
table.entries td {padding:15px;}
table.entries tr > td:first-child {text-align:right;}
.case_button{background-color:#7895a3;width:auto;position:relative;left:45px;font-size:60px;color:white;border:none;cursor:pointer}
.case_button:hover{background-color:#325d64;}

/*Case Index*/
ul.index li{padding:10px;margin:10px;border:none;background-color:#7895a3;width:auto;
			position:relative;left:45px;cursor:pointer;list-style-type:none;}
ul.index li:hover{background-color:#325d64;}
ul.index li a{color:white;text-decoration:none;font-size:25px;}
/*table.index tr{padding:5px;margin:10px;border:none;background-color:#7895a3;width:auto;position:relative;
				font-size:45px;color:white;cursor:pointer}*/


/*Home Page*/
div.nav_bar {padding:0px;margin:auto;width:100%;height:50px;background:#7895a3;}
ul.nav_bar {list-style-type:none;margin:0;padding:0;}
li.nav_bar {float:left;margin:10px;cursor:pointer;}
.nav_font {color:#325d64;font-style:normal;font-size:20px;text-decoration:none;text-align:justify;display:block;}

/*Gradients*/
.light_gray_blue{
	background: #d4e4ef; /* Old browsers */
	background: -moz-linear-gradient(top, #d4e4ef 0%, #86aecc 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#d4e4ef), color-stop(100%,#86aecc)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top, #d4e4ef 0%,#86aecc 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top, #d4e4ef 0%,#86aecc 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(top, #d4e4ef 0%,#86aecc 100%); /* IE10+ */
	background: linear-gradient(top, #d4e4ef 0%,#86aecc 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#d4e4ef', endColorstr='#86aecc',GradientType=0 ); /* IE6-9 */
}
/*round stuff*/
.round {-moz-border-radius:10px;-webkit-border-radius:10px;border-radius:10px;}
