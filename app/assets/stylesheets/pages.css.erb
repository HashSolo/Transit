/*Globals*/
html {height:100%;}
body {height:100%;margin:0;padding:0;}
div.content {display:inline-block;float:left;width:100%;position:relative;min-height:100%;}
div.middle_content {display:inline-block;width:100%;float:left;position:relative;min-height:400px;}

/*content view*/
div.content_view {display:inline-block;width:100%;float:left;padding-top:10px;height:100%;min-height:400px;}

/*Header*/
header {padding:0px;margin:0px;display:inline-block;float:left;width:100%;position:relative;height:80px;}
header h1 {padding:0px;margin:0px;display:inline-block;float:left;width:100%;text-align:center;}
nav.header {padding:0px;margin:0px;display:inline-block;width:100%;float:left;height:80px;background:#7895a3;}
nav ul {padding:0px;margin:0px;display:inline-block;width:100%;float:left;height:80px;}
nav ul li {padding:0px;margin:0px;display:inline-block;list-style-type:none;height:50px;color:#ffffff;line-height:50px;margin-top:15px;margin-bottom:15px;background:#325d5d;}
nav ul li span.text_label {font-size:12px;width:100%;}
nav ul li.header_left {float:left;width:65%;margin-left:15%;margin-right:20%;text-align:left;font-size:30px;font-family:'Trebuchet MS', Arial, sans-serif;padding-left:20px;back}
nav ul li.header_left h2 {display:inline-block;width:20%;font-size:25px;margin-left:20px;}
nav ul li.header_right {float:right;text-align:center;font-size:30px;width:14.667%;margin-left:1%;margin-right:1%;}
nav ul li a {text-decoration:none;color:#ffffff;display:block;height:80px;}


/*Footer*/
footer {padding:0px;height:50px;margin:0px;display:inline-block;float:left;width:100%;text-align:center;position:relative;float:bottom;}
footer div.copyright {padding:0px;margin:0px;display:inline-block;float:left;width:100%;text-align:center;}
nav.footer {height:50px;border-top:3px double #7895a3;border-left:3px double #7895a3;border-right:3px double #7895a3;}

/*Left Sidebar*/
div.left_sidebar {display:inline-block;width:100%;height:100%;float:left;position:relative;background:#ffffff;min-height:400px;}

/*Content View*/
div.content_view {display:inline-block;width:100%;height:100%;float:left;position:relative;}

/*Sign in*/
div.sign_in {padding:0px;margin:auto;width:100%;height:80px;background:#7895a3;}
div.sign_in_bottom {padding:0px;margin:auto;width:100%;height:5px;background:#7895a3;clear:both;}
div.float_right{float:right;}
.button_margin{margin-right:4%}
.logo_margin{margin-left:10%}
.label_font{color:#ffffff;font-size:13px;}
.button_font{color:#ffffff;}
.logo_font {font-size:45px;color:white;text-decoration:none;font-family: 'Lucida Console',
			'DejaVu Sans Mono',monospace;font-weight:bold}
.form_border{border-style:solid;border-color:black;border-width:1px}
.styled_button{background-color:#325d64;color:white;border:none;cursor:pointer}
/*header picture*/
.signin_pic{margin-top:0;width:70%;height:500px;background:white;float:left;}


/*Home Page*/
div.nav_bar {padding:0px;margin:auto;width:100%;height:50px;background:#7895a3;}
ul.nav_bar {list-style-type:none;margin:0;padding:0;}
li.nav_bar {float:left;margin:10px;cursor:pointer;}
.nav_font {color:#325d64;font-style:normal;font-size:20px;text-decoration:none;text-align:justify;display:block;}

/*Gradients*/
.light_gray_blue{
	background: #d4e4ef; /* Old browsers */
	background: -moz-linear-gradient(top, #d4e4ef 0%, #86aecc 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#d4e4ef), color-stop(100%,#86aecc)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top, #d4e4ef 0%,#86aecc 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top, #d4e4ef 0%,#86aecc 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(top, #d4e4ef 0%,#86aecc 100%); /* IE10+ */
	background: linear-gradient(top, #d4e4ef 0%,#86aecc 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#d4e4ef', endColorstr='#86aecc',GradientType=0 ); /* IE6-9 */
}
/*round stuff*/
.round {-moz-border-radius:10px;-webkit-border-radius:10px;border-radius:10px;}
