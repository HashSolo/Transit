<%#*************************************************************
The left sidebar is generated by pre-loading 4 arrays with various 
html content based on the current view and then looping through
the arrays to efficiently generate a vertical sidebar list 
*************************************************************%>

<div class="left_sidebar">

<%
tabs = Array.new
icons = Array.new
links = Array.new
ids = Array.new
%>	
			
<%#*************************************************************
Case Toolbar
*************************************************************%>			
		
<div id="case_toolbar" class="hidden">		
			
			<% if is_controller_active?('patients') || is_active?('cases#show') || is_active?('history_females#show') || is_active?('history_males#show') %>
			
			<%#is_active?('appointments#new')%>
			
			<ul class="">					

				<li id='sidebar_header' class=""><span id="js_toolbar_header"class="text">Header</span><span class="icon"></span></li>


				<li id='case_1' class="option"><%= link_to case_path(@case.id) do |l|%><span class="icon">&#8594</span><span class="text"> Overview</span></a><% end %></li>
				
				<li id='case_2' class="option"><%= link_to '#' do |l|%><span class="icon">&#8594</span><span class="text"> Billing</span><% end %></li>
				
				
				<li id='case_3' class="option"><%= link_to case_patients_path(@case.id) do |l|%><span class="icon">&#8594</span><span class="text"> Patients</span><% end %></li>
				<li id='case_4' class="option"><span class="icon">&#8594</span><span class="text"> Diagnosis</span></li>
				<li id='case_5' class="option"><a href='#'><span class="icon">&#8594</span><span class="text"> Stimulation</span></a></li>
				<li id='case_6' class="option"><span class="icon">&#8594</span><span class="text"> Embryology</span></li>
				<li id='case_7' class="option"><a href='#'><span class="icon">&#8594</span><span class="text"> Appointments</span></a></li>
				<li id='case_8' class="option"><a href='#'><span class="icon">&#8594</span><span class="text"> Follow Up</span></a></li>
				<li id='case_9' class="option"><%= link_to new_case_appointment_path(@case.id) do |l| %><span class="icon">&#8594</span><span class="text"> New Appointment</span></a><% end %></li>
			
<%#new_case_appointments_path(@case.id)%>			
			
	</ul>
	
	<% end %>

</div>		
		
<%#*************************************************************
Clinic Toolbar
*************************************************************%>
<div id="clinic_toolbar" class="hidden">
		<% if is_controller_active?('clinicians') || is_controller_active?('referrers') || is_controller_active?('posts') %>
			
			<ul class="">
				
				<li id='sidebar_header' class=""><span id="js_toolbar_header"class="text">Header</span><span class="icon"></span></li>


				<li id='case_1' class="option"><%= link_to clinicians_path do |l|%><span class="icon">&#8594</span><span class="text">Clinic Overview</span></a><% end %></li>
				<li id='case_2' class="option"><%= link_to new_clinician_path do |l|%><span class="icon">&#8594</span><span class="text"> Add Clinician</span><% end %></li>
				<li id='case_3' class="option"><%= link_to new_referrer_path do |l|%><span class="icon">&#8594</span><span class="text"> Add Referrer</span><% end %></li>
				<li id='case_4' class="option"><%= link_to new_clinician_post_path(current_user.clinician) do |l|%><span class="icon">&#8594</span><span class="text"> Chat</span><% end %></li>
				
			</ul>
			
			
			<% tabs = Array['Clinician list','New clinician','New referrer'] %>
			<% icons = Array[nil,nil,nil] %>
			<% links = Array['/clinicians','/clinicians/new','/referrers/new'] %>
			<% ids = Array[nil,nil,nil] %>
			
		<% end %>
</div>
		
<%#*************************************************************
Calendar Toolbar... this sidebar is unique and needs work
*************************************************************%>
<div id="calendar_toolbar" class="hidden">
			
		<%# if is_active?('appointments#index') %>
			<div class="appointment_matrix">
				<h1>Intelligent Scheduler</h1>
				<table>
					<tr><td id="my">My </td><td id="clinic">Clinic </td></tr>
					<tr><td id="daily">Daily</td><td id="weekly">Weekly</td></tr>
				</table>	
			</div>
			<div class="calendar_container">	
				<div id="calendar">
				</div>
			</div>
			
		<%# end %>
		
</div>

<%#*************************************************************
Female History Toolbar(s)
*************************************************************%>

<div id="female_toolbar" class="hidden">

<% if is_active?('history_females#new') || is_active?('history_females#edit') %>

<% tabs = Array['Basic','Pregnancy History','Menstrual Cycle','Gynecologic History','Medical History',
				'Environmental Factors','Genetic/Family History','Infertility Tests','Infertility Treatments'] %>
<% icons = Array[nil,nil,nil,nil,nil,nil,nil,nil,nil] %>
<% links = Array[nil,nil,nil,nil,nil,nil,nil,nil,nil] %>
<% ids = Array["update_history_1","update_history_2","update_history_3","update_history_4","update_history_5",
				"update_history_6","update_history_7","update_history_8","update_history_9"] %>

<% end %>

</div>

<%#*************************************************************
Male History Toolbar(s)
*************************************************************%>

<div id="male_toolbar" class="hidden">

<% if is_active?('history_males#new') || is_active?('history_males#edit') %>

<% tabs = Array['Basic','Pregnancy History','Medical History', 'Environmental Factors','Genetic/Family History',' Male Infertility Tests'] %>
<% icons = Array[nil,nil,nil,nil,nil,nil] %>
<% links = Array[nil,nil,nil,nil,nil,nil] %>
<% ids = Array["update_history_1","update_history_2","update_history_3",
				"update_history_4","update_history_5", "update_history_6"] %>

<% end %>

</div>

</div>


<script type="text/javascript">

function toolbar_type(type) {
//	set_headers("toolbar type success","toolbar type success");
//	type = type.toString();
	$('#case_toolbar').addClass("hidden");
	$('#clinic_toolbar').addClass("hidden");
	$('#calendar_toolbar').addClass("hidden");
	$('#female_toolbar').addClass("hidden");
	$('#male_toolbar').addClass("hidden");
	$('#'+type.toString()+'_toolbar').removeClass("hidden");	
	
};


</script>

