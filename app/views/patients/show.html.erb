<%= link_to "Edit Patient Info", 		
			edit_case_patient_path(@case.id, @patient) %>

<p>First Name: <%= @patient.first_name %></p>

<p>Last Name: <%= @patient.last_name %></p>

<p>Sex: <%= @patient.sex %></p>

<p>DOB: <%= @patient.date_of_birth %></p>

<% if @patient.sex == "Female" %>

	<br>

	<% if @patient.history_female.nil? %>

		<% # store patient id in patients helper %>

		<%= link_to "Fill out Patient History", 
		new_case_patient_history_female_path(@case.id, @patient.id) %>

	<% else %>
	
		<% #...display high level patient history content %>
	
		<%= link_to "View Complete Patient History", 
		case_patient_history_female_path(@case.id, @patient.id, 						@patient.history_female.id) %>
	
		<br>
	
		<%= link_to "Edit Patient History", 
		edit_case_patient_history_female_path(@case.id, @patient.id,  @patient.history_female.id) %>

	<% end %>

<% elsif @patient.sex == "Male" %>

	<br>

	<% if @patient.history_male.nil? %>

		<% # store patient id in patients helper %>

		<%= link_to "Fill out Patient History", 
		new_case_patient_history_male_path(@case.id, @patient.id) %>
		
	<% else %>

		<% #...display high level patient history content %>

		<%= link_to "View Complete Patient History", 
		case_patient_history_male_path(@case.id, @patient.history_male.id) %>

		<br>

		<%= link_to "Edit Patient History", 
		edit_case_patient_history_male_path(@case.id, @patient.id, @patient.history_male.id) %>

	<% end %>

<% end %>

<br>

<%= link_to "Return to Patient Page", 		
			case_patients_path(@case.id) %>
			
			<script type="text/javascript">

			var default_left;
			var default_right;

			$(document).ready(function(){

				default_left=2;
				default_right=2;
				toolbar_config(default_left, default_right);

				toolbar_header("Case Helper");
				page_title("Patient Summary");
			});


			/**********************************************************************
			Interactive left and right toolbars
			**********************************************************************/
			$('#toolbar_toggle').click(function(){
				toolbar_toggle(default_left, default_right);	
			});
			$('#schedule_toggle').click(function(){
				appointment_toggle(default_left, default_right);	
			});


			</script>