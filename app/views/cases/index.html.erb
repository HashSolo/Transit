<ul class="case_index">
	<% @cases.each do |c| %>
	
	<%
	@referrer = Referrer.find(c.referrer_id)
	@user = User.find(c.user_id)
	@clinician = Clinician.find(c.clinician_id)
	@patients = c.patients.all
	%>

		<li>
		
			<%= link_to case_path(c) do |l| %>			
			<span class="round left"> 
				<br>
				<span class="icon">g</span>
				<h1>ID <%="#{c.id}"%></h1>
			</span>
			<% end %>
			
			<span class="middle">
				<h1>Information</h1>
				<table>
					<tr>
						<td>Opened:</td><td><%= "#{c.created_at.to_date}"%></td>
					</tr>
					<tr>
						<td>Account:</td><td><%= "#{@user.email}"%></td>
					</tr>
					<tr>
						<td>Referring MD:</td><td><%= "#{@referrer.last_name}, #{@referrer.first_name}".to(15) %></td>
					</tr>
					<tr>
						<td>Clinician:</td><td><%= "#{@clinician.last_name}, #{@clinician.first_name}".to(15)%></td>
					</tr>
				</table>
				
			</span>
			
			<span class="right">
				<% if @patients.count == 0 %>
				<h1>No patients</h1>
				<% else %>
				<h1>Patients</h1>
				<table>
					<% @patients.each do |p| %>
					<tr>
						<td><%= "#{p.last_name}, #{p.first_name}".to(15) %></td>
					</tr>
					<% end %>
				</table>
				<% end %>
			</span>
		
		</li>

<% end %>
<%= will_paginate @cases %>

</ul>

<script type="text/javascript">

var default_left;
var default_right;

$(document).ready(function(){

	default_left=2;
	default_right=2;
	toolbar_config(default_left, default_right);
});

$('#toolbar_toggle').click(function(){
	toolbar_toggle(default_left, default_right);	
});

$('#schedule_toggle').click(function(){
	appointment_toggle(default_left, default_right);	
});


</script>