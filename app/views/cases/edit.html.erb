<%= form_for @case do |f|%>


	
	<div class="grid_9 alpha omega">
	<div class="grid_4 alpha">
		<div class="table_wrapper top_wrapper left_wrapper">
			<h2>Account Information</h2>
			<table class="form">
				<tr>	
					<td class="label">Email:</td>
					<td class="value"><%= @user.email %>					
					</td>	
				</tr>
			</table>
		</div>
	</div>	
	
	<div class="grid_5 omega">
			<div class="table_wrapper top_wrapper right_wrapper">		
				<h2>Referral Information</h2>			
				<table class="form">
					<tr>
						<td class="label">Referring MD:</td>
						<td class="value"><%= f.select(:referrer_id, options_for_select(@referrers.collect {|g| ["#{g.first_name} #{g.last_name}", g.id]})) %></td>
					</tr>
				</table>
			</div>
		</div>
		</div>
	
	
	<div class="grid_9 alpha omega">
	<div class="grid_4 alpha">
		<div class="table_wrapper bottom_wrapper left_wrapper">	
			<h2>Clinician Information</h2>							
			<table class="form">
				<tr>
					<td class="label">Case clinician:</td>
					<td class="value"><%= f.select(:clinician_id, options_for_select(@clinicians.collect {|g| ["#{g.first_name} #{g.last_name}", g.id]})) %></td>
				</tr>
			</table>
		</div>
	</div>
	
	<div class="grid_5 omega">
		<div class="table_wrapper bottom_wrapper right_wrapper">		
			<h2>Appointment Information</h2>										
			<table class="form">
			<tr>	
				<td class="label">Date:</td>	
				<td class="value"><%= @appointment.date_and_time %></td>
			</tr>

			</table>
		</div>
	</div>
	</div>

		
	<%= f.submit "Update Case", :class => "case_button" %>
<% end %>

<script type="text/javascript">

var default_left;
var default_right;

$(document).ready(function(){

	default_left=2;
	default_right=2;
	toolbar_config(default_left, default_right);
	
	toolbar_header("Toolbar");
	page_title("Edit Case");
});

$('#toolbar_toggle').click(function(){
	toolbar_toggle(default_left, default_right);	
});

$('#schedule_toggle').click(function(){
	appointment_toggle(default_left, default_right);	
});


</script>