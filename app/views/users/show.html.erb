<div class="profile grid_12 centered-shadow">

		<div class="grid_12 alpha omega">
		<div class="top-profile-section">
			<div class="grid_12 alpha omega">
				<div class="gravatar-and-name">
				<h1>
					<%= @user.email %>
				</h1>
				</div>
			</div>
		</div>
		</div>
<hr>
		<div class="grid_12 alpha omega">
		<div class="middle-profile-section">
			<div class="grid_6 alpha">
				<div class="user-info-table">
				<table>
					<tr><td><strong>Email</strong></td><td><%= link_to @user.email, @user.email %></td></tr>
					<tr><td><strong>Member Since</strong></td><td><%= @user.created_at.strftime("%B %d, %Y") %></td></tr>
				</table>
				</div>
			</div>
			
			<div class="grid_6 omega">
				<div class="social-statistics">
			
				</div>
			</div>
		</div>
		</div>
<hr>
		<div class="grid_12 alpha omega">
		<div class="bottom-profile-section">
			
			
			
		</div>
		</div>
</div>

<script type="text/javascript">

var default_left;
var default_right;

$(document).ready(function(){

	default_left=2;
	default_right=2;
	toolbar_config(default_left, default_right);

	toolbar_header("Home");
	page_title("Profile");
});


/**********************************************************************
Interactive left and right toolbars
**********************************************************************/
$('#toolbar_toggle').click(function(){
	toolbar_toggle(default_left, default_right);	
});
$('#schedule_toggle').click(function(){
	appointment_toggle(default_left, default_right);	
});


</script>